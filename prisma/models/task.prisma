model Task {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  description String
  status      Status
  completedAt DateTime?
  owner       User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId     String
}

enum Status {
  Incomplete
  Complete
  InProgress
}
